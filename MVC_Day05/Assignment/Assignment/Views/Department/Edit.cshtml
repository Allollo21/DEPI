@model Department
@using Microsoft.AspNetCore.Mvc.Rendering

<style>
    .form-label {
        font-weight: bold;
    }

    .form-control, .form-select {
        max-width: 500px;
    }

    .form-container {
        max-width: 600px;
        margin: auto;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
</style>

<div class="container my-5">
    <h1 class="mb-4">Edit Department</h1>
    <div class="form-container">
        <form asp-action="SaveEdit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Hidden field for ID -->
            <input type="hidden" asp-for="Id" />

            <!-- Department Name -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Department Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter department name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Manager Name -->
            <div class="mb-3">
                <label asp-for="MgrName" class="form-label">Manager Name</label>
                <input asp-for="MgrName" class="form-control" placeholder="Enter manager name" />
                <span asp-validation-for="MgrName" class="text-danger"></span>
            </div>

            <!-- Teachers Selection -->
            <div class="mb-3">
                <label class="form-label">Teachers</label>
                <select name="teacherIds" class="form-select" multiple asp-items="@(ViewBag.Teachers as List<SelectListItem> ?? new List<SelectListItem>())">
                </select>
                <small class="form-text text-muted">Hold Ctrl (or Cmd) to select multiple teachers.</small>
            </div>

            <!-- Courses Selection -->
            <div class="mb-3">
                <label class="form-label">Courses</label>
                <select name="courseIds" class="form-select" multiple asp-items="@(ViewBag.Courses as List<SelectListItem> ?? new List<SelectListItem>())">
                </select>
                <small class="form-text text-muted">Hold Ctrl (or Cmd) to select multiple courses.</small>
            </div>

            <!-- Students Selection -->
            <div class="mb-3">
                <label class="form-label">Students</label>
                <select name="studentIds" class="form-select" multiple asp-items="@(ViewBag.Students as List<SelectListItem> ?? new List<SelectListItem>())">
                </select>
                <small class="form-text text-muted">Hold Ctrl (or Cmd) to select multiple students.</small>
            </div>

            <!-- Submit Button -->
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Update Department</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

