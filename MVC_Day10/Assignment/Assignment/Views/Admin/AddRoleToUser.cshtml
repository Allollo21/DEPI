@using Assignment.Models.ViewModels
@model AddRoleViewModel

<h2>Add Role to User</h2>
<form asp-action="AddRoleToUser" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UserId"></label>
        <select asp-for="UserId" asp-items="Model.Users" class="form-control"></select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoleName"></label>
        <select asp-for="RoleName" asp-items="Model.Roles" class="form-control"></select>
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    @if (Model.CurrentRoles != null && Model.CurrentRoles.Any())
    {
        <p>Current Roles: @string.Join(", ", Model.CurrentRoles)</p>
    }
    <button type="submit" class="btn btn-primary">Add Role</button>
</form>