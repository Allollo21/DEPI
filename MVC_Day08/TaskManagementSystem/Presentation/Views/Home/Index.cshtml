@{
    ViewData["Title"] = "Home";
}

<style>
    /* Hero Section */
    .hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 100px 20px 80px;
        text-align: center;
        color: white;
    }

    .hero-content {
        max-width: 800px;
        margin: 0 auto;
    }

    .hero h1 {
        font-size: 56px;
        margin-bottom: 20px;
        font-weight: 800;
        line-height: 1.2;
    }

    .hero p {
        font-size: 20px;
        margin-bottom: 40px;
        opacity: 0.95;
    }

    .hero-buttons {
        display: flex;
        gap: 20px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-primary-hero {
        background: white;
        color: #667eea;
        padding: 16px 40px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 700;
        font-size: 18px;
        transition: transform 0.3s, box-shadow 0.3s;
        display: inline-block;
    }

        .btn-primary-hero:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
            color: #667eea;
        }

    .btn-secondary-hero {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        padding: 16px 40px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 700;
        font-size: 18px;
        border: 2px solid white;
        transition: all 0.3s;
        display: inline-block;
    }

        .btn-secondary-hero:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-2px);
            color: white;
        }

    /* Features Section */
    .features {
        padding: 100px 20px;
        background: #f9fafb;
    }

    .features-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .section-title {
        text-align: center;
        font-size: 42px;
        margin-bottom: 20px;
        color: #111827;
        font-weight: 700;
    }

    .section-subtitle {
        text-align: center;
        font-size: 18px;
        color: #6b7280;
        margin-bottom: 60px;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 40px;
    }

    .feature-card {
        background: white;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

    .feature-icon {
        font-size: 48px;
        margin-bottom: 20px;
    }

    .feature-card h3 {
        font-size: 24px;
        margin-bottom: 12px;
        color: #111827;
    }

    .feature-card p {
        color: #6b7280;
        line-height: 1.7;
    }

    /* How It Works Section */
    .how-it-works {
        padding: 100px 20px;
        background: white;
    }

    .steps-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .steps {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 40px;
        margin-top: 60px;
    }

    .step {
        text-align: center;
    }

    .step-number {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        font-weight: 700;
        margin: 0 auto 20px;
    }

    .step h3 {
        font-size: 20px;
        margin-bottom: 12px;
        color: #111827;
    }

    .step p {
        color: #6b7280;
    }

    /* CTA Section */
    .cta {
        padding: 100px 20px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        text-align: center;
        color: white;
    }

        .cta h2 {
            font-size: 42px;
            margin-bottom: 20px;
            font-weight: 700;
        }

        .cta p {
            font-size: 20px;
            margin-bottom: 40px;
            opacity: 0.95;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .hero h1 {
            font-size: 36px;
        }

        .hero p {
            font-size: 16px;
        }

        .hero-buttons {
            flex-direction: column;
            align-items: center;
        }

        .btn-primary-hero, .btn-secondary-hero {
            width: 100%;
            max-width: 300px;
        }

        .section-title {
            font-size: 32px;
        }

        .cta h2 {
            font-size: 32px;
        }
    }
</style>

<!-- Hero Section -->
<section class="hero">
    <div class="hero-content">
        <h1>Manage Your Tasks with Ease</h1>
        <p>Stay organized, boost productivity, and never miss a deadline. TaskMaster helps you take control of your daily tasks with a beautiful, intuitive interface.</p>
        <div class="hero-buttons">
            <a asp-controller="Tasks" asp-action="Index" class="btn-primary-hero">Get Started Free</a>
            <a href="#features" class="btn-secondary-hero">Learn More</a>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="features">
    <div class="features-container">
        <h2 class="section-title">Powerful Features</h2>
        <p class="section-subtitle">Everything you need to manage your tasks effectively</p>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">✨</div>
                <h3>Beautiful Interface</h3>
                <p>Modern, clean design that makes task management a pleasure. Built with the latest design trends for maximum usability.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">🎯</div>
                <h3>Smart Filtering</h3>
                <p>Filter tasks by status, priority, or category. Find exactly what you need in seconds with powerful filtering options.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">🔄</div>
                <h3>Flexible Sorting</h3>
                <p>Sort your tasks by due date, title, or creation date. Organize your workflow the way that works best for you.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">📅</div>
                <h3>Due Date Tracking</h3>
                <p>Never miss a deadline again. Set due dates and get a clear overview of what needs to be done and when.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">⚡</div>
                <h3>Lightning Fast</h3>
                <p>Built with performance in mind. Add, edit, and complete tasks instantly with our optimized architecture.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">🎨</div>
                <h3>Status Badges</h3>
                <p>Visual status indicators make it easy to see task completion at a glance. Stay organized with color-coded badges.</p>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section id="how-it-works" class="how-it-works">
    <div class="steps-container">
        <h2 class="section-title">How It Works</h2>
        <p class="section-subtitle">Get started in three simple steps</p>
        <div class="steps">
            <div class="step">
                <div class="step-number">1</div>
                <h3>Create Your Tasks</h3>
                <p>Add tasks with titles, descriptions, and due dates in seconds</p>
            </div>
            <div class="step">
                <div class="step-number">2</div>
                <h3>Organize & Filter</h3>
                <p>Use powerful filters and sorting to organize your workflow</p>
            </div>
            <div class="step">
                <div class="step-number">3</div>
                <h3>Track Progress</h3>
                <p>Mark tasks complete and watch your productivity soar</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section id="cta" class="cta">
    <h2>Ready to Get Organized?</h2>
    <p>Join thousands of productive people using TaskMaster today</p>
    <a asp-controller="Tasks" asp-action="Index" class="btn-primary-hero">Start Managing Tasks Now</a>
</section>