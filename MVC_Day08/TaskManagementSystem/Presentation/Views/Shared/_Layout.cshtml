<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task Master</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Presentation.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Layout.css" />
</head>
<body>
    <header>
        <nav class="navbar-custom align-items-center">
            <div class="nav-container">
                <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">📋 Task Master</a>
                <button class="navbar-toggler-custom" onclick="toggleMenu()">Menu</button>
                <ul class="nav-links" id="navLinks">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Tasks" asp-action="Index">My Tasks</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    <li><a asp-area="" asp-controller="Tasks" asp-action="Index" class="btn-nav">Get Started</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="main-content container mt-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-custom mt-5">
        <div class="footer-container">
            <div class="footer-brand">📋 Task Master</div>
            <ul class="footer-links">
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-area="" asp-controller="Tasks" asp-action="Index">Tasks</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
            </ul>
            <div class="footer-copyright">
                &copy; 2025 TaskMaster. All rights reserved. Built with ❤️ for productivity.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function toggleMenu() {
            document.getElementById('navLinks').classList.toggle('show');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>