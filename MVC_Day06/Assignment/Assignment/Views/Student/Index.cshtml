@model X.PagedList.IPagedList<Student>
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@{
    ViewData["Title"] = "Students";
    Layout = "_CustomLayout";
}

<div class="container" style="padding-top: 20px; padding-bottom: 40px;">
    <div class="page-header">
        <h1>Students</h1>
        <p>
            <a href="@Url.Action("Add")" class="btn-create">+ Create New Student</a>
        </p>
    </div>

    <div class="search-wrapper" style="margin-bottom: 20px;">
        <form method="get" asp-action="Index" style="display: flex; gap: 10px; align-items: center; flex-wrap: wrap;">
            <input type="text"
                   name="searchName"
                   value="@ViewBag.SearchName"
                   placeholder="Search by student name..."
                   style="padding: 8px 12px; border: 1px solid #ddd; border-radius: 4px; width: 250px;" />

            <select name="departmentId"
                    style="padding: 8px 12px; border: 1px solid #ddd; border-radius: 4px; width: 200px;">
                <option value="">All Departments</option>
                @foreach (var dept in ViewBag.Departments)
                {
                    <option value="@dept.Id" selected="@(ViewBag.DepartmentId == dept.Id)">
                        @dept.Name
                    </option>
                }
            </select>

            <button type="submit"
                    style="padding: 8px 16px; background-color: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer;">
                Search
            </button>

            @if (!string.IsNullOrWhiteSpace(ViewBag.SearchName) || ViewBag.DepartmentId != null)
            {
                <a href="@Url.Action("Index")"
                   style="padding: 8px 16px; background-color: #6c757d; color: white; text-decoration: none; border-radius: 4px;">
                    Clear Filters
                </a>
            }

            @if (!string.IsNullOrWhiteSpace(ViewBag.SearchName) || ViewBag.DepartmentId != null)
            {
                <div style="width: 100%; margin-top: 10px; color: #666;">
                    <strong>Active Filters:</strong>
                    @if (!string.IsNullOrWhiteSpace(ViewBag.SearchName))
                    {
                        <span style="background-color: #e7f3ff; padding: 4px 8px; border-radius: 3px; margin-right: 5px;">
                            Name: <strong>@ViewBag.SearchName</strong>
                        </span>
                    }
                    @if (ViewBag.DepartmentId != null)
                    {
                        var selectedDept = ((List<Department>)ViewBag.Departments).FirstOrDefault(d => d.Id == ViewBag.DepartmentId);
                        if (selectedDept != null)
                        {
                            <span style="background-color: #e7f3ff; padding: 4px 8px; border-radius: 3px;">
                                Department: <strong>@selectedDept.Name</strong>
                            </span>
                        }
                    }
                </div>
            }
        </form>
    </div>

    <div class="pagination-info">
        Showing <strong>@Model.FirstItemOnPage</strong> to <strong>@Model.LastItemOnPage</strong> of <strong>@Model.TotalItemCount</strong> students
        (Page <strong>@Model.PageNumber</strong> of <strong>@Model.PageCount</strong>)
    </div>

    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Age)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Department.Name)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Age)</td>
                        <td>@Html.DisplayFor(modelItem => item.Department!.Name)</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="pagination-wrapper">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { PageNumber = page, searchName = ViewBag.SearchName, departmentId = ViewBag.DepartmentId }))
    </div>
</div>

@section Scripts {
    <link href="~/css/StudentIndex.css" rel="stylesheet" />
}