@model TaskItem
@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/TaskDelete.css" />

<div class="page-header">
    <h1>🗑️ Delete Task</h1>
</div>

<div class="warning-message">
    ⚠️ Are you sure you want to delete this task? This action cannot be undone.
</div>

<partial name="_TaskDetailsPartial" model="@Model" />

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="btn-group">
        <button type="submit" class="btn-delete">Delete Task</button>
        <a asp-action="Index" class="btn-cancel">Cancel</a>
    </div>
</form>