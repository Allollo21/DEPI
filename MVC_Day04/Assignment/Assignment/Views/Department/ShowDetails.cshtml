@model Department

    <style>
        .card {
            margin-bottom: 20px;
        }

        .table-sm {
            font-size: 0.9rem;
        }

        .card-header {
            background-color: #007bff;
            color: white;
        }
    </style>


    <div class="container my-5">
        <h1 class="mb-4">Department Details</h1>

        @if (Model == null)
        {
            <div class="alert alert-info" role="alert">
                No department found for the specified ID.
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">@Model.Name</h3>
                    <p class="mb-0">Manager: @(Model.MgrName ?? "N/A")</p>
                </div>
                <div class="card-body">
                    <!-- Teachers Table -->
                    <h5>Teachers</h5>
                    @if (Model.Teachers != null && Model.Teachers.Any())
                    {
                        <table class="table table-sm table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Salary</th>
                                    <th>Address</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var teacher in Model.Teachers)
                                {
                                    <tr>
                                        <td>@teacher.Name</td>
                                        <td>@teacher.Salary.ToString("C")</td>
                                        <td>@(teacher.Address ?? "N/A")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No teachers assigned.</p>
                    }

                    <!-- Courses Table -->
                    <h5 class="mt-4">Courses</h5>
                    @if (Model.Courses != null && Model.Courses.Any())
                    {
                        <table class="table table-sm table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Degree</th>
                                    <th>Minimum Degree</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in Model.Courses)
                                {
                                    <tr>
                                        <td>@course.Name</td>
                                        <td>@(course.Degree ?? "N/A")</td>
                                        <td>@(course.MinDegree ?? "N/A")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No courses available.</p>
                    }

                    <!-- Students Table -->
                    <h5 class="mt-4">Students</h5>
                    @if (Model.Students != null && Model.Students.Any())
                    {
                        <table class="table table-sm table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Age</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in Model.Students)
                                {
                                    <tr>
                                        <td>@student.Name</td>
                                        <td>@student.Age</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No students enrolled.</p>
                    }
                </div>
            </div>
        }
    </div>

@section Scripts {

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
}
