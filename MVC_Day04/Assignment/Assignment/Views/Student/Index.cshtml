@model X.PagedList.IPagedList<Student>
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Add">Create New</a>
</p>

<!-- Show pagination info -->
<p>
    Showing @Model.FirstItemOnPage to @Model.LastItemOnPage of @Model.TotalItemCount students
    (Page @Model.PageNumber of @Model.PageCount)
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Department.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department!.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination Controls -->
<div class="pagination-wrapper">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { PageNumber = page }))
</div>

<style>
        .pagination-wrapper {
            margin: 25px 0;
            text-align: center;
        }

        .pagination {
            display: inline-flex;
            gap: 10px;
            list-style: none;
            padding: 0;
        }

        .pagination li a,
        .pagination li span {
            display: inline-block;
            padding: 8px 14px;
            text-decoration: none;
            color: #555;
            background-color: transparent;
            border-bottom: 2px solid transparent;
            font-weight: 500;
            transition: all 0.2s ease;
        }

        .pagination li a:hover {
            color: #007bff;
            border-bottom-color: #007bff;
        }

        .pagination li.active a,
        .pagination li.active span {
            color: #007bff;
            border-bottom-color: #007bff;
            font-weight: 700;
        }

        .pagination li.disabled span,
        .pagination li.disabled a {
            color: #ccc;
            cursor: not-allowed;
        }
</style>